{
  "version": 2,
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "builds": [
    {
      "src": "api/vercel.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60,
        "memory": 1024,
        "includeFiles": ["dist/**/*", "node_modules/**/*"],
        "excludeFiles": ["node_modules/.cache/**/*"]
      }
    },
    {
      "src": "api/health.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "api/health.ts"
    },
    {
      "src": "/(.*)",
      "dest": "api/vercel.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NPM_FLAGS": "--legacy-peer-deps"
  }
}
